<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Rules</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.description %></td>
        <td><%= link_to "Ver", game.rule %></td>
        <td><%= image_tag game.cover.cover_photo.variant(resize: "100x100", colorspace: "gray").processed %></td>
        <td><%= link_to "Download", rails_blob_path(game.cover.cover_photo), disposition: "attachment" %></td>
        <td>
          <ul>
            <% game.pieces.each do |piece| %>
              <% piece.pieces_photos.each do |p| %>
                <li><%= image_tag p.variant(resize: "100x100", colorspace: "gray").processed %> </li>
              <% end %>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
